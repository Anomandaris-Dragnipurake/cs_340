{% extends "base_admin.j2" %}
{% block title %}Travel Class Admin{% endblock %}
{% block head %}
{{ super() }}
<style type="text/css">
    .important {
        color: #06407a;
    }
</style>
{% endblock %}
{% block read %}{{ super() }}{% endblock %}
{% block new_button%}<th><a href="#" onClick="createForm()">Add New</a> </th> {% endblock %}
{% block update_button%}<td><a href="edit_travelclass/{{item.Travel_Class_ID}}" class="btn btn-default">Edit</a></td>{% endblock %}
{% block delete_button%}<td><a href="delete_travelclass/{{item.Travel_Class_ID}}" class="btn btn-default">Delete</a></td>{% endblock %}

{% block create %}
<form id="createTravelClass" action="/travelclass-admin" method="post">
    <h1 class="title">Add Travel Class</h1>
    <fieldset class="fields">
        <!-- placeholder shows ghost text, required forces an input, pattern forces input adherence -->
        <label for="name">Name:</label>
        <input type="text" class="form-control" id="name" name="name" pattern="[A-Za-z]{1,}" placeholder="Name" required>

        <label for="cost">Cost:</label>
        <input type="text" class="form-control" id="cost" name="cost" pattern="^[+-]?[0-9]{1,3}(?:,?[0-9]{3})*(?:\.[0-9]{2})?$" placeholder="50.56" required>
    </fieldset>

    <!-- Create 'Add Travel Class' and 'Cancel' buttons -->
    <div class="btnBlock">
        <input type="submit" value="Add Travel Class" name="Add_TravelClass" class="btn btn-primary">
        <a class="btn btn-primary" href="/travelclass-admin">Cancel</a>
    </div>
</form>
{% endblock %}

{% block update %}
<form id="editTravelClass" action="/edit_travelclass/{{data[0].Travel_Class_ID}}" method="post">
    <h1 class="title">Update Travel Class</h1>
    <fieldset class="fields">
        <input type="hidden" value="{{data[0].Travel_Class_ID}}" class="form-control" id="travelClassID" name="travelClassID" required>
        
        <label for="name">Name:</label>
        <input type="text" class="form-control" id="name" name="name" pattern="[A-Za-z]{1,}"placeholder="{{data[0].Travel_Class_Name}}" required>

        <label for="cost">Cost:</label>
        <input type="text" class="form-control" id="cost" name="cost" pattern="^[+-]?[0-9]{1,3}(?:,?[0-9]{3})*(?:\.[0-9]{2})?$"
            placeholder="{{data[0].Travel_Class_Cost}}" required>
    </fieldset>
    <div class="btnBlock">
        <input class="btn" type="submit" id="Update Travel_Class" value="Update Travel Class">
        <a class="btn btn-primary" href="/travelclass-admin">Cancel</a>
    </div>
</form>
{% endblock %}

{% block delete %}
  <form method="POST" id="delete_TravelClass/{{data[0].Travel_Class_ID}}">
      <h1 class="title">Delete Travel Class</h1>
          <fieldset class="fields">
          <p>Are you sure you wish to delete this travel class?</p>
          <input type="hidden" name="travelClassID" id="deleteTravelClassID" value="{{data[0].Travel_Class_ID}}">
          <label>ID: </label> {{data[0].Travel_Class_ID}}
          <label>Name: </label> {{data[0].Travel_Class_Name}}         
    </fieldset>
    <div class="btnBlock">
        <input class="btn" type="submit" id="DeleteTravelClass" value="Delete Travel Class">
        <a class="btn btn-primary" href="/travelclass-admin">Cancel</a>
    </div>
  </form> 
{% endblock %}